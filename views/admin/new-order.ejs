<%- include("partials/header")%>
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">New Order</h1>
        </div><!-- /.col -->

      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">

      <div class="row">
        <div class="col-md-6">

          <div class="card card-warning">
            <div class="card-header">
              <h3 class="card-title">&zwnj;</h3>
            </div>
            <div class="card-body">

              <form method="POST" action="/admin/new-order" id="form-add-order" enctype="multipart/form-data">
                <div class="row">

                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Customer Name</label>
                      <input type="text" class="form-control" placeholder="" name="cname" required>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                      <label>Method</label>
                      <select class="form-control" name="dmethod">
                        <option value="0">Pick Up</option>
                        <option value="1">Delivery</option>
                        <option value="2">Soft Copy Only</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                      <label>Frame</label>
                      <select class="form-control" name="frame">
                        <option value="0">No Frame</option>
                       
                        <option value="1">6 x 9 | A5 - White</option>
                        <option value="2">6 x 9 | A5 - Black</option>

                        <option value="3">8 x 12 | A4 - White **</option>
                        <option value="4">8 x 12 | A4 - Black</option>

                        <option value="5">12 x 18 | A3 - White</option>
                        <option value="6">12 x 18 | A3 - Black</option>

                      </select>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                      <label>Price</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">LKR</span>
                        </div>
                        <input type="number" class="form-control" name="price" required>
                        <div class="input-group-append">
                          <span class="input-group-text">.00</span>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Contact Details</label>
                      <input type="text" class="form-control" placeholder="" name="contactf" required>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="exampleInputFile">Image</label>
                      <div class="input-group">
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="image" name="image" required>
                          <label class="custom-file-label" for="exampleInputFile"></label>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="col-sm-12">
                    <div class="form-group">
                      <label>Notes</label>
                      <textarea class="form-control" rows="7" placeholder="" name="notes"></textarea>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <button type="submit" class="btn btn-block btn-primary btn-lg">Submit</button>
                  </div>
                  <div class="col-sm-6">
                    <button type="reset" class="btn btn-block btn-primary btn-lg">Reset</button>
                  </div>

                </div>


              </form>

            </div>
          </div>
        </div>
      </div>

    </div>
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->

  <!-- /.content-wrapper -->
  <%- include("partials/footer")%>